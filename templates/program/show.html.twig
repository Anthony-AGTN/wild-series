{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="rounded mx-auto my-5 d-block poster-size" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>Les saisons :</p>
			<ul>
			{% for season in seasons %}
				<li><a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">{{ season.description }}</a></li>
			{% endfor %}
			</ul>
		</div>
	</div>
	<p>
		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	</p>
	<p>
		<a href="{{ path('category_index') }}">
			Retour à la liste des catégories
		</a>
	</p>
{% endblock %}
